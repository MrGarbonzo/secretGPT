# secretGPT Environment Configuration
# Copy this file to .env and update with your actual values

# REQUIRED: Secret AI Configuration
SECRET_AI_API_KEY=your-secret-ai-api-key-here

# Optional: Custom Secret Network node URL
# SECRET_NODE_URL=https://api.secretnetwork.io

# Hub Configuration
SECRETGPT_HUB_HOST=0.0.0.0
SECRETGPT_HUB_PORT=8000

# Web UI Configuration (set to true to enable web interface)
SECRETGPT_ENABLE_WEB_UI=false

# MCP Configuration (Phase 4)
MCP_ENABLED=false
# MCP_SECRET_NETWORK_URL=

# Logging Configuration
LOG_LEVEL=INFO

# Environment Mode
ENVIRONMENT=development