# SecretGPT Environment Configuration
# Copy this file to usr/.env and update with your actual values

# REQUIRED: Secret AI API Key
# Get your API key from Secret Network team
SECRET_AI_API_KEY=your_api_key_here

# Secret Network MCP Server URL
# This should point to your secret_network_mcp server
SECRET_MCP_URL=http://your-mcp-server:8002

# Optional: HTTPS Configuration
# Only needed if you're not using Cloudflare for SSL
HTTPS_PORT=443
FORCE_HTTPS=false

# Optional: Trusted Hosts (comma-separated)
# Add your production domains here
TRUSTED_HOSTS=attestai.io,secretgptee.com,www.attestai.io,www.secretgptee.com

# Optional: CORS Origins (comma-separated)
# Add your allowed origins for CORS
CORS_ORIGINS=https://attestai.io,https://secretgptee.com,https://www.attestai.io,https://www.secretgptee.com

# Optional: Logging
LOG_LEVEL=INFO