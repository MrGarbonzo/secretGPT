# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Secret AI Configuration (REQUIRED)
SECRET_AI_API_KEY=bWFzdGVyQHNjcnRsYWJzLmNvbTpTZWNyZXROZXR3b3JrTWFzdGVyS2V5X18yMDI1

# =============================================================================
# WEB UI CONFIGURATION (OPTIONAL)
# =============================================================================

# Enable/disable web UI interface
SECRETGPT_ENABLE_WEB_UI=true

# =============================================================================
# HUB CONFIGURATION (OPTIONAL)
# =============================================================================

# Host binding (default: 0.0.0.0 for all interfaces)
SECRETGPT_HUB_HOST=0.0.0.0

# Port binding (default: 8000)
SECRETGPT_HUB_PORT=8000

# =============================================================================
# SYSTEM CONFIGURATION (OPTIONAL)
# =============================================================================

# Environment mode (development/production)
ENVIRONMENT=production

# Logging level (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# =============================================================================
# SECRET NETWORK CONFIGURATION (OPTIONAL)
# =============================================================================

# Custom Secret Network node URL (optional)
SECRET_NODE_URL=

# =============================================================================
# MCP CONFIGURATION (PHASE 4 - FUTURE)
# =============================================================================

# Enable MCP integration (not yet implemented)
MCP_ENABLED=false

# MCP server URL (for external MCP server)
MCP_SECRET_NETWORK_URL=

# =============================================================================
# DEPLOYMENT EXAMPLES
# =============================================================================

# Example 1: Web UI only
# SECRETGPT_ENABLE_WEB_UI=true
# TELEGRAM_BOT_ENABLED=false

# Example 2: Production deployment
# SECRETGPT_ENABLE_WEB_UI=true
# ENVIRONMENT=production
# LOG_LEVEL=INFO

